<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
         http://www.springframework.org/schema/context
         http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:property-placeholder location="classpath:session15/conf.properties"/>

    <bean id="phone1" class="session15.Phone">
        <property name="name" value="Apple"/>
        <property name="age" value="21"/>
    </bean>

    <bean id="phone2" class="session15.Phone">
        <!--Cherez konsructor-->
        <!--est ponztiye type i index. napr: type="int"-->
        <constructor-arg value="Nokia" index="0"/>
        <constructor-arg value="33"/>
    </bean>

    <bean id="phone3" class="session15.Phone">
        <constructor-arg ref="phoneName"/>
        <constructor-arg value="14"/>
    </bean>


    <bean id="phoneName" class="java.lang.String">
        <constructor-arg value="Olololo"/>

    </bean>

    <bean id="phone4" class="session15.Phone">
        <property name="name" value="${car.model}"/>
        <property name="age" value="21"/>
    </bean>


    <bean id="company1" class="session15.Company">
        <constructor-arg value="Levi9" index="0"/>
        <property name="director" ref="director1"/>
        <property name="car" ref="car1"/>
    </bean>

    <bean id="car1" class="session15.Car">
        <constructor-arg value="Toyota" index="0"/>
    </bean>

    <bean id="director1" class="session15.Director">
        <constructor-arg value="Igor" index="0"/>
        <property name="car" ref="car1"/>
    </bean>


</beans>

